<div class="container login">
  <div class="row">
    <div class="col-sm-12">
      <div class="login-header">
        <img class="login-logo" src="/imgs/twitter_white.png" alt="twitter logo">
      </div>
      <h1 class="text-center">Welcome to Twitter!</h1>
      <p class="text-center">Please log in here.</p>
      <form class="login-form" action="/login" method="post">
        <div class="form-group">
          <label for="username">Username:</label>
          <input class="form-control" type="text" name="username" placeholder="Username">
        </div>
        <div>
         <label for="password">Password:</label>
         <input class="form-control" type="password" name="password" placeholder="Password">
       </div>
       <input type="submit" class="btn btn-default login-button center-block" value="Login">
     </form>
   </div>
 </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <p class="text-center">If you're not a registered user, please register <a class="register" href="/users/new">here</a>.</p>
    </div>
  </div>
</div>
